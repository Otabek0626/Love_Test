<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/background"
        >
    </LinearLayout>

    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="100dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/girl_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        />
    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_below="@+id/equal"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="First you have to write names on the space"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/boy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/plus"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:ems="10"
        android:hint="Enter Boy's Name..."
        android:textColorHint="@android:color/holo_blue_light"
        />


    <EditText
        android:id="@+id/girl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/equal"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:ems="10"
        android:hint="Enter Girl's Name..."
        android:textColorHint="@android:color/holo_blue_light"
        />

    <TextView
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="100dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-black"
        />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Start  "
        android:textColor="@android:color/holo_red_dark"
        android:background="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:layout_below="@id/equal"
        android:layout_centerHorizontal="true"
        android:padding="10dp"

        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/one"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="100dp"
        android:layout_below="@id/equal"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        />


  </RelativeLayout>